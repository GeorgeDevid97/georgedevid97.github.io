window.onload = function () {
  document.getElementById('addtocart1').onclick = cart1;
  document.getElementById('addtocart2').onclick = cart2;
  document.getElementById('addtocart3').onclick = cart3;
  document.getElementById('addtocart4').onclick = cart4;
  document.getElementById('addtocart5').onclick = cart5;
  document.getElementById('addtocart6').onclick = cart6;
  document.getElementById('addtocart7').onclick = cart7;
  document.getElementById('addtocart8').onclick = cart8;
  document.getElementById('addtocart9').onclick = cart9;
  document.getElementById('addtocart10').onclick = cart10;
};

function cart1() {
    let quantity = document.querySelector('#image1 .options .quantity').value;
    let size = document.querySelector('#image1 .options .size').value;
    let color = document.querySelector('#image1 .options .color').value;
    alert(quantity + ' ' + size + ' ' + color + ' T-Shirt(s) selected');
}

